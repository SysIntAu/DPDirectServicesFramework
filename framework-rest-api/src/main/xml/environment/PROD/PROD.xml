<env name="PROD" description="System Test Environment">
	<location name="datapower_deployment_server" id="E15.0x">
		<host name="mgtserver">
			<push dir="/opt/esb/deploy/artefacts/"/>
			<config dir="/opt/esb/deploy/exec/"/>
			<deploy dir="/opt/esb/deploy/exec/do_deploy.sh"/>
			<log dir="/opt/esb/deploy/logs"/>
			<!-- Datapower Environment Parameters to Control Deployment-->
			<container type="dps" version="1.0"
				basedir="E:\projects\dpbuild\sdlc-deploy\datapower\deploy">
				<parameter name="dp.hostname.list" value="dpgateway01,dpgateway02"/>
				<parameter name="dp.port" value="5550"/>
				<parameter name="esb.domain" value="DPESBPROD"/>
				<parameter name="esb.xmlmanager" value="DomainDefaultCache_V1"/>
				<parameter name="debug" value="false"/>
				<parameter name="fail.on.error" value="true"/>
				<parameter name="rollback.on.error" value="true"/>
			</container>
			<!-- Datapower Environment Variables for Config Injection-->
			<esbpropertys name="environment_properties">
				<!-- Environment -->
				<parameter name="esbproperty://envName" value="PROD"/>
				<parameter name="esbproperty://esbEchoHttpEndpoint" value="http://DPESBPROD:10000"/>
				<!-- SERVICELOG Logging -->
				<parameter name="esbproperty://logging/capturePointLogs" value="none"/>
				<parameter name="esbproperty://logging/successLog/putUrl/1" value="dpmq://ESB_Internal_Grp_RealTime_V1/?RequestQueue=DPXML.SERVICE.LOG;AsyncPut=true"/>
				<parameter name="esbproperty://logging/errorLog/putUrl/1" value="dpmq://ESB_Internal_Grp_RealTime_V1/?RequestQueue=DPXML.ERROR.LOG;AsyncPut=true"/>
				<!-- Stats Logging -->
				<parameter name="esbproperty://logCategory/esbStats/DPESBPROD" value="DPESBPROD_ServiceStats"/>
				<parameter name="esbproperty://logTarget/url" value="http://logserver.dpdirect.org:8090/dplog/add-log-entry/"/>
				<parameter name="esbproperty://logTarget/remoteSystemManagement/address" value="logserver.dpdirect.org"/>
				<parameter name="esbproperty://logTarget/remoteSystemManagement/port" value="23456"/>
				<!-- LDAP  -->
				<parameter name="esbproperty://authorisation/ldapConf/hostName" value="ldapserver.dpdirect.org"/>
				<parameter name="esbproperty://authorisation/ldapConf/portNumber" value="636"/>
				<parameter name="esbproperty://sslProxyProfile/ldapAuthorisation" value="SslClientNoCredentialsNoTLS"/>
				<parameter name="esbproperty://authorisation/ldapConf/bindDN" value=""/>
				<parameter name="esbproperty://authorisation/ldapConf/targetDnTemplate" value=""/>
			</esbpropertys>
			<!-- Datapower Environment Variables for Config Injection-->
			<injection name="environment_properties">
				<!-- Verify Service Endpoints -->
				<parameter name="esbEchoHttpEndpoint" value="http://DPESBPROD:10000"/>
				<!-- Domain Host Alias -->
				<parameter name="esbApplianceHostName1" value="dpgateway01"/>
				<parameter name="esbApplianceHostName2" value="dpgateway02"/>				<parameter name="esbLocalHostAlias" value="DPESBPROD"/>
				<!-- default encryption algorithms-->
				<parameter name="esbDefaultEncryptionAlgorithm" value="http://www.w3.org/2001/04/xmlenc#aes256-cbc"/>
				<parameter name="esbDefaultKeyTransportAlgorithm" value="http://www.w3.org/2001/04/xmlenc#rsa-1_5"/>
				<parameter name="esbDefaultDigestAlgorithm" value="http://www.w3.org/2001/04/xmlenc#sha256"/>
				<!-- Logging -->
				<parameter name="logCategoryServiceStats" value="DPESBPROD_ServiceStats"/>
				<parameter name="logTargetUrl" value="http://logserver.dpdirect.org:8090/dplog/add-log-entry/"/>
				<parameter name="logTargetRemoteSystemManagementAddress" value="logserver.dpdirect.org"/>
				<parameter name="logTargetRemoteSystemManagementPort" value="23456"/>
			</injection>
			<!-- Datapower Environment xconfig insertions-->
			<insertions name="environment_insertions">
				<!--				<insertion parentClass="LoadBalancerGroup" parentName="Target_LBG">
					<LBGroupMembers parentClass="LoadBalancerGroup" parentName="Target_LBG">
						<Server>server.local</Server>
						<Weight>1</Weight>
						<MappedPort>80</MappedPort>
						<Activity/>
						<HealthPort/>
					</LBGroupMembers>
				</insertion>-->
			</insertions>
		</host>
	</location>
</env>
