<?xml version="1.0" encoding="UTF-8"?>
<os:PolicySet xmlns:os="urn:oasis:names:tc:xacml:2.0:policy:schema:os"
    PolicySetId="DPESB_Service_Access_Policy" Version="1.0"
    PolicyCombiningAlgId="urn:oasis:names:tc:xacml:1.0:policy-combining-algorithm:deny-overrides"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="urn:oasis:names:tc:xacml:2.0:policy:schema:os ../xacml-2.0-policy.xsd">
    <os:Description>DataPower ESB XACML 2.0 Services Access Policy Definition</os:Description>
    <!--========================================================================
		Policies are  RESOURCE (services, services domain) centric, ordered from most to least restrictive.
		Where a suitable policy exists, add an additional subject to the policy.
		Policies must be as specific as possible.
		Use a specific service policy (eg. "Only_SV237...") where applicable.
		Avoid an all stream/domain service policy (eg. All Party) where a "retrieve" policy will better suite.
		Never use all services policy.
		========================================================================-->
    <os:Target/>
    <os:Policy PolicyId="Test_echo_access"
        RuleCombiningAlgId="urn:oasis:names:tc:xacml:1.0:rule-combining-algorithm:permit-overrides">
        <os:Target>
            <os:Subjects>
                <os:Subject>
                    <os:SubjectMatch MatchId="urn:oasis:names:tc:xacml:1.0:function:string-equal">
                        <os:AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string"
                            >chrisandtim</os:AttributeValue>
                        <os:SubjectAttributeDesignator
                            AttributeId="urn:oasis:names:tc:xacml:1.0:subject:subject-id"
                            DataType="http://www.w3.org/2001/XMLSchema#string"/>
                    </os:SubjectMatch>
                </os:Subject>
            </os:Subjects>
            <os:Resources>
                <os:Resource>
                    <os:ResourceMatch MatchId="urn:oasis:names:tc:xacml:1.0:function:string-equal">
                        <os:AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string"
                            >{http://www.dpdirect.org/Namespace/MSG/Auth/V1.0}AuthRequest</os:AttributeValue>
                        <os:ResourceAttributeDesignator
                            AttributeId="urn:oasis:names:tc:xacml:1.0:resource:resource-id"
                            DataType="http://www.w3.org/2001/XMLSchema#string"/>
                    </os:ResourceMatch>
                </os:Resource>
            </os:Resources>
        </os:Target>
        <os:Rule RuleId="PermitRule" Effect="Permit"/>
    </os:Policy>
</os:PolicySet>