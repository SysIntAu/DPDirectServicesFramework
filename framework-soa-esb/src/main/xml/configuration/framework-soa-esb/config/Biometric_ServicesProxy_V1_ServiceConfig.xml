<?xml version="1.0" encoding="UTF-8"?>
<ServiceConfig xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" wsdlLocation="local:///service-schema/MBCU/WSDL/V1.0/Biometric_ServicesProxy_V1.wsdl"
	xsi:noNamespaceSchemaLocation="ServiceConfig.xsd"  version="1.0">
	<InputMatchCriteria>
		<HTTPSPort>6210</HTTPSPort>
	</InputMatchCriteria>
	<PreProcessConfig>
		<AAA>
			<!--<Method>Signed-SAML-Filter</Method>-->
			<Method>STS-XACML</Method>
		</AAA>
	</PreProcessConfig>
	<OperationConfig id="Verify">
		<Description>Configuration for the "Verify" service</Description>
		<InputMatchCriteria>
			<Action>http://www.dpdirect.org/Namespace/Biometric/ServicesProxy/Interface/V1/Biometric_ServicesProxy_PortType_V1/Verify</Action>
			<InboundURI>*/Biometric</InboundURI>
		</InputMatchCriteria>
		<RequestPolicyConfig schemaValidate="true">
			<BackendRouting provider="BMS">
				<SOAPConfig>local:///ESB_Services/services/common/ApplySoapPassWsAddressing.xsl</SOAPConfig>
				<HTTPEndpoint>
					<Address>${msgBiometricServicesHttpEndpoint}</Address>
					<HeaderList>
						<Header name="Content-Type" value="*"/>
					</HeaderList>
				</HTTPEndpoint>
				<TimeoutSeconds>31</TimeoutSeconds>
			</BackendRouting>
		</RequestPolicyConfig>
		<ResponsePolicyConfig schemaValidate="true"/>
		<ErrorPolicyConfig schemaValidate="true">
			<Transform>
				<Stylesheet>local:///ESB_Services/framework/HandleErrors.xsl</Stylesheet>
			</Transform>
		</ErrorPolicyConfig>
	</OperationConfig>
	<OperationConfig id="Verify_Verify">
		<Description>Configuration for the "Verify" service</Description>
		<InputMatchCriteria>
			<Action>http://www.dpdirect.org/Namespace/Biometric/ServicesProxy/Interface/V1/Biometric_ServicesProxy_PortType_V1/Verify</Action>
			<InboundURI>*/VerifyBiometric</InboundURI>
		</InputMatchCriteria>
		<RequestPolicyConfig schemaValidate="true">
			<BackendRouting provider="BMS">
				<BackendStub>local:///ESB_Services/services/Verify/V1.2/VerifyResponse_Stub.xsl</BackendStub>
			</BackendRouting>
		</RequestPolicyConfig>
		<ResponsePolicyConfig schemaValidate="true"/>
		<ErrorPolicyConfig schemaValidate="true">
			<Transform>
				<Stylesheet>local:///ESB_Services/framework/HandleErrors.xsl</Stylesheet>
			</Transform>
		</ErrorPolicyConfig>
	</OperationConfig>
</ServiceConfig>